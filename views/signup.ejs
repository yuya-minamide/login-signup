<div>
	<h1>Sign up</h1>
	<%= include ("./partials/messages"); %>

	<form action="/users/signup" method="POST">
		<div>
			<label for="name">Name</label>
			<input type="name" id="name" name="name" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
		</div>
		<div>
			<label for="email">Email</label>
			<input type="email" id="email" name="email" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
		</div>
		<div>
			<label for="password">Password</label>
			<input
				type="password"
				id="password"
				name="password"
				placeholder="Create Password"
				minlength="6"
				value="<%= typeof password != 'undefined' ? password : '' %>"
			/>
		</div>
		<div>
			<label for="password2">Confirm Password</label>
			<input
				type="password"
				id="password2"
				name="password2"
				placeholder="Confirm Password"
				minlength="6"
				value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
			/>
		</div>
		<button type="submit">Register</button>
	</form>
	<p>Already have an account? <a href="/users/login">Login</a></p>
	<p>OR</p>
	<div>
		<a href="/users/google">Google</a>
		<a href="/users/github">Github</a>
		<a href="/users/twitter">Twitter</a>
	</div>
</div>
